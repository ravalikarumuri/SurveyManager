<fieldset>
  <%= f.label :content, "Question" %><br />
  <%= f.text_area :name %><br />
  <%= link_to "remove", '#', class: "remove_fields" %>
  <%= f.label :data_type,"Select Type of Question" %>
  <%=  f.select :data_type, Question.data_types.keys, include_blank: true %>
  <%= f.fields_for :answer_data do |builder| %>
      <%= render 'answer_datum_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add Answer", f, :answer_data %>
</fieldset>